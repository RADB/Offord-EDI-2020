@inject IModalService ModalService
@inject ServiceContext dbContext;


<div class="simple-form" style="width:400px;">
    <h3>Are you sure you want to delete this question?</h3> <br />
    <button @onclick="@ConfirmYes" class="btn btn-primary">Yes</button>
    <button @onclick="@Cancel" class="btn btn-secondary">Cancel</button>
</div>

@code {

    void ConfirmYes()
    {
        ModalService.Close(ModalResult.Ok($"Confirmed"));
    }

    void Cancel()
    {
        ModalService.Cancel();
    }
}
