@using Microsoft.AspNetCore.Components.Authorization
@using Syncfusion.Blazor.Buttons

<SfSwitch CssClass="handle-text" OnLabel="@SwitchModel.OnLabel" OffLabel="@SwitchModel.OffLabel" @bind-Checked="@SwitchModel.Value" ValueChange="@((Syncfusion.Blazor.Buttons.ChangeEventArgs<bool> e) => OnChange.InvokeAsync(e))"/>

@code {
    [Parameter]
    public SwitchViewModel SwitchModel { get; set; }
    [Parameter]
    public EventCallback<Syncfusion.Blazor.Buttons.ChangeEventArgs<bool>> OnChange { get; set; }
}
