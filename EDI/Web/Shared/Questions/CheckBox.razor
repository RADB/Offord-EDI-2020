@using Microsoft.AspNetCore.Components.Authorization
@using Syncfusion.Blazor.Buttons

<SfCheckBox CssClass="handle-text"  @bind-Checked="@CheckModel.Value" @onchange="@((ev) => CheckBoxValueChange(ev, CheckModel.Name))" />

@code {
    [Parameter]
    public CheckViewModel CheckModel { get; set; }

    private void CheckBoxValueChange(Microsoft.AspNetCore.Components.ChangeEventArgs e, string name)
    {
        string selectedString = e.Value.ToString();

        CheckModel.Value = false;

        if (bool.TryParse(selectedString, out bool value))
        {
            CheckModel.Value = value;
        }
    }
}
