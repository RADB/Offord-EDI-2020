@inherits QuestionnaireBase
@using EDI.Web.Shared.Questions
<div class="card-body border border-primary rounded">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <h4>@QuestionText</h4>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-9">
                                    <Text TextModel=@TextModel OnChange="ChangeTextModel" />
                                </div>

                                <div class="col-2">
                                    @if (Config.HasHelp)
                                    {
                                    <button type="button" class="btn btn-primary" @onclick="@(() => ShowModal("e-EDI Help",HelpText))"><i class="icon-question"></i> Help</button>
                                    }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @code {
        [Parameter]
        public string CurrentValue { get; set; }

        [Parameter]
        public Child data { get; set; }

        public TextViewModel TextModel { get; set; }

        protected override async Task OnInitializedAsync()
        {
            GetQuestionText();
            TextModel = new TextViewModel();
            TextModel.Name = Config.EntityField;
            TextModel.Placeholder = QuestionText;
            TextModel.Value = CurrentValue;
        }

        public async void ChangeTextModel(Microsoft.AspNetCore.Components.ChangeEventArgs e)
        {
            switch (Config.EntityName)
            {
                case "QuestionnairesDataDemographics":
                    data.GetType().GetProperty((Config.EntityField).Replace(" ", "")).SetValue(data.QuestionnairesDataDemographics, e.Value.ToString());
                    break;
                case "QuestionnairesDataSectionB":
                    data.GetType().GetProperty((Config.EntityField).Replace(" ", "")).SetValue(data.QuestionnairesDataSectionBs, e.Value.ToString());
                    break;
            }

        }
    }
