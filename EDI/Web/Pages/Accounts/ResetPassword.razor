@page "/Accounts/ResetPassword/{Message}"

<div class="logincontainer">

    <div class="logincontent">

        <header class="logincontainer-header">
            <div class="loginnavbar">
                <div class="loginnavbar-inner">
                    <div class="innercontainer">
                        <a class="brand help-logo" href="/">HELP</a>
                        <div class="pull-right auth-cont">

                            @*<a href="/Login/"><i class="icon-lock"></i> Login</a>*@

                            <div class="logo-box">
                                <a class="uw-logo" href="/"></a>
                                <a class="hhsc-logo" href="/" style="margin-left:15px;"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>


        <div class="row">
            <div class="span11 container-body">

                <div class="row">
                    <div class="span3 offset4">
                        <h1 class="auth-lock-icon" style="width: 320px;font-size: 22px;">
                            Reset New Password
                        </h1>
                        <form class="form-panel span3" method="post" action="./ResetPassword">
                            <div asp-validation-summary="All" class="text-danger login-validation"></div>
                            @if (!string.IsNullOrEmpty(@Message) && @Message != "resetpassword")
                            {
                                <div class="text-danger">@Message</div><br />
                            }
                            <div class="control-group">
                                <label for="id_username">Email address:</label>
                                <div class="controls">
                                    <input type="text" name="username" autofocus="autofocus" class="span3" required="" id="id_username">

                                </div>
                            </div>
                            <div class="control-group">
                                <label for="id_password">New Password:</label>
                                <div class="controls">
                                    <input type="password" name="password" class="span3" autocomplete="off" required="" id="id_password">
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="id_confirmpassword">Confirm Password:</label>
                                <div class="controls">
                                    <input type="password" name="confirmpassword" class="span3" autocomplete="off" required="" id="id_confirmpassword">
                                </div>
                            </div>
                            <div class="form-panel-actions">
                                <input type="submit" class="btn btn-success" value="Update Password">
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

        <div class="clearfix"></div>
    </div>
    <footer id="page-footer">
        <p>
            © Offord Centre for Child Studies | McMaster University & Hamilton Health Sciences, Hamilton ON, Canada | Tel. (905)525-9140 27051
        </p>
    </footer>
</div>

@code {
    [Parameter]
    public string Message { get; set; }
}
